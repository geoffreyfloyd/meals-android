<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_edit_grocery"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:id="@+id/labelName"
        android:layout_alignBottom="@+id/editName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editName"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="127dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="33dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/labelPrep" />

    <TextView
        android:text="Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelCategory"
        android:layout_alignBottom="@+id/editCategory"
        android:layout_alignStart="@+id/labelName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editCategory"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        android:layout_below="@+id/editName"
        android:layout_alignStart="@+id/editName"
        android:layout_marginTop="22dp" />

    <TextView
        android:text="Perishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelPrep"
        android:layout_alignBottom="@+id/editPerishes"
        android:layout_alignStart="@+id/labelCategory" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editPerishes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCategory"
        android:layout_below="@+id/editCategory"
        android:layout_alignStart="@+id/editCategory"
        android:layout_marginTop="22dp" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonSave"
        android:layout_alignStart="@+id/labelPrep"
        android:layout_alignParentEnd="true"
        android:background="@color/colorAccent" />

</RelativeLayout>
